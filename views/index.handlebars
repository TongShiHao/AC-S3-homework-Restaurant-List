<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            aria-describedby="search-button" value={{ keyword }}>
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<div class="container ">
  <a class="creat-btn badge badge-success font-weight-normal mt-5" href="/restaurants/new">
    Creat
  </a>
</div>


<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">

        {{#each restaurants}}

        <div class="card mb-3">
          <a class="card-img-top" href="/restaurants/{{{ this.id }}}" class="text-secondary">
            <img class="card-img-top" src="{{{ this.image }}}" alt="{{{ this.name }}}">
          </a>
          <div class="colum card-body p-3">

            <h6 class="card-title mb-1">{{{ this.name }}}</h6>

            <div class="restaurant-category mb-1">
              <i class="fas fa-utensils pr-2"></i> {{{ this.category }}}
            </div>

            <span class="badge badge-pill badge-danger font-weight-normal mb-2">
              {{{ this.rating }}}
              <i class="fas fa-star fa-xs"></i>
            </span>

            <a class="btn btn-outline-primary btn-lg btn-block mb-2" href="/restaurants/{{{ this.id }}}">了解更多</a>
            <a class="btn btn-outline-primary btn-lg btn-block mb-2" href="/restaurants/{{{ this.id }}}/edit">修改資料</a>
            <button class="btn btn-outline-danger btn-lg btn-block mb-2" type="submit">刪除</button>

          </div>
        </div>


        {{/each}}

      </div>
    </div>
  </div>
</div>