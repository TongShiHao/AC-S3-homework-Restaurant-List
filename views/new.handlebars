<div class="container mt-3">
  <form action="/restaurants" method="POST">
    <div class="row mb-3">
      <input class="puts col-6" type="text" placeholder="餐廳名字" name="name">
      <input class="puts col-6" type="text" placeholder="料理類別" name="category">
    </div>
    <div class="row mb-3">
      <input class="puts col-6" type="text" placeholder="圖片網址" name="image">
      <input class="puts col-6" type="text" placeholder="Google地圖網址" name="google_map">
    </div>
    <div class="row mb-3">
      <input class="puts col-4" type="text" placeholder="電話" name="phone">
      <input class="puts col-4" type="text" placeholder="地址" name="location">
      <input class="puts col-4" type="text" placeholder="評價" name="rating">
    </div>
    <div class="row mb-3">
      <input class="puts col-12" type="text" placeholder="描述" name="description">
    </div>
    <div class="row  justify-content-between">
      <button class="puts  btn-outline-success col-2" type="submit">新增</button>
      <a class="puts" href="/">
        <span class="btn btn-outline-primary">回到首頁</span>
      </a>
    </div>
  </form>
</div>